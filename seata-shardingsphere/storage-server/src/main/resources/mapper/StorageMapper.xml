<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="io.seata.sample.mapper.StorageMapper" >
  <resultMap id="BaseResultMap" type="io.seata.sample.entity.Storage" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="product_id" property="productId" jdbcType="BIGINT" />
    <result column="total" property="total" jdbcType="INTEGER" />
    <result column="price" property="price" jdbcType="DECIMAL" />
  </resultMap>
  <update id="decrease">
    UPDATE storage SET total = total - #{count} WHERE product_id = #{productId}
  </update>
  <select id="findById" resultType="decimal">
    SELECT price FROM storage WHERE product_id = #{productId}
  </select>
</mapper>
